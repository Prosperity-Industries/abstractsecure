{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node",  // ⬅️ Changed from "bundler" to "Node" (Fixes imports)
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Additional Fixes */
    "rootDir": "./server",       // ⬅️ Ensures server code is correctly resolved
    "outDir": "./dist",          // ⬅️ Ensures transpiled files go to 'dist/'
    "esModuleInterop": true,     // ⬅️ Ensures compatibility with CommonJS packages
    "resolveJsonModule": true    // ⬅️ Allows importing .json files in backend
  },
  "include": ["server/**/*"] // ⬅️ Ensures server code is included
}
