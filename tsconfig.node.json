{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/utils/*": ["server/utils/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "server",
    "tailwind.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
